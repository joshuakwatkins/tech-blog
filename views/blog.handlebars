<div>
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{blogPrint.title}}</h2>
      <div>
        Posted by {{blogPrint.User.name}}
      </div>
    </div>
    <div class="card-body">
      {{blogPrint.body}}
    </div>
  </article>

  {{#if blogPrint.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each blogPrint.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.name}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" id="blog-id" value="{{blogPrint.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input" id="comment-body"></textarea>

      <button type="submit" class="btn" id="submit-btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>